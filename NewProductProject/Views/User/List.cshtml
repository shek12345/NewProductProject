@{
}
<h1>Cart</h1>
<div>

<form asp-action="Order">
<table class="table table-bordered">

    <tr>

        <th>Id</th>

        <th>Name</th>

        <th>Price</th>
         <th>Description</th>

        <th>Action</th>

    </tr>

    @foreach(NewProductProject.Models.Product prod in ViewBag.ProductList)

    {

        <tr>

            <td>@prod.Id</td>

            <td>@prod.Name</td>

            <td>@prod.Price</td>
             <td>@prod.Description</td>

            <td>
                 

                @Html.ActionLink("AddToCart", "AddToCart", new { @id = prod.Id })

            </td>

        </tr>

    }
    </table>
    </form>
    <input type="submit" value="Place Order" />
    </div>
