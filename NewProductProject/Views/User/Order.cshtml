@{
}
<h1>Order</h1>
<div>


    <form asp-action="PlaceOrder">
        <table class="table">
            <thead>
                <tr>
                     <th>Id</th>

        <th>Name</th>

        <th>Price</th>
         <th>Description</th>
                </tr>
            </thead>
            <tbody>
               @foreach(NewProductProject.Models.Product prod in ViewBag.ProductList)

                {
                    <tr>

                        <td>@prod.Id</td>

            <td>@prod.Name</td>

            <td>@prod.Price</td>
             <td>@prod.Description</td>

                        <td>
                            @Html.ActionLink("Remove", "Remove", new { id = prod.Id })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="submit" value="Cancel" />
    </form>
    </div>
